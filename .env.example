# Convex Configuration
# Required: Your Convex deployment URL
VITE_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=prod:your-deployment

# WorkOS Authentication
# Required: WorkOS client configuration for user authentication
VITE_WORKOS_CLIENT_ID=client_your_client_id
VITE_WORKOS_REDIRECT_URI=https://yourdomain.com
VITE_WORKOS_API_HOSTNAME=apiauth.convex.dev
WORKOS_CLIENT_ID=client_your_client_id

# Convex OAuth Configuration
# Required: OAuth credentials for Convex API access
BIG_BRAIN_HOST=https://api.convex.dev
CONVEX_OAUTH_CLIENT_ID=your_oauth_client_id
CONVEX_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# AI Provider API Keys
# Optional: Add one or more AI provider API keys to enable code generation
# Users can also add their own API keys through the Chef settings page
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENAI_API_KEY=
XAI_API_KEY=

# Sentry Error Tracking (Optional)
# Optional: Configure Sentry for error monitoring
SENTRY_DSN=
SENTRY_VITE_PLUGIN_AUTH_TOKEN=

# Application Configuration
# Optional: Application-specific settings
NODE_ENV=production
PORT=3000
DISABLE_USAGE_REPORTING=0
DISABLE_BEDROCK=0

# Vercel Compatibility (Optional)
# Optional: These are used for compatibility with Vercel-specific features
VERCEL_ENV=production
VERCEL_GIT_COMMIT_SHA=
