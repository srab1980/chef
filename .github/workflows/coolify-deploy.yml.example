# Example GitHub Actions workflow for deploying to Coolify
# To use this:
# 1. Rename to coolify-deploy.yml (remove .example)
# 2. Add COOLIFY_WEBHOOK_URL secret in GitHub repository settings
# 3. Configure Coolify to accept webhook deployments

name: Deploy to Coolify

on:
  push:
    branches:
      - main
      - release
  workflow_dispatch:

jobs:
  deploy:
    name: Trigger Coolify Deployment
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Trigger Coolify Deployment
        run: |
          curl -X POST "${{ secrets.COOLIFY_WEBHOOK_URL }}"
        
      - name: Deployment triggered
        run: |
          echo "Deployment webhook sent to Coolify"
          echo "Check your Coolify dashboard for deployment status"

  # Optional: Add a notification step
  notify:
    name: Notify deployment status
    runs-on: ubuntu-latest
    needs: deploy
    if: always()
    
    steps:
      - name: Send notification
        run: |
          # Add your notification logic here (Slack, Discord, etc.)
          echo "Deployment notification would be sent here"
